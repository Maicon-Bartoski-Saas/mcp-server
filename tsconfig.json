{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build", // distからbuildに変更済み
    "rootDir": ".",
    "declaration": true
  },
  "include": ["**/*.ts"], // すべてのサブディレクトリの.tsファイルを含める
  "exclude": ["node_modules", "build"] // 除外先も変更済み
}
